<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#003C3A3A"
        android:orientation="vertical">
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22dp"
            android:textColor="#000000" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sfondo"
        android:clickable="true"
        android:visibility="visible">

    </ListView>

    <Button
        android:id="@+id/fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="352dp"
        android:text="fine"
        app:layout_constraintBottom_toBottomOf="@+id/listViewC"
        app:layout_constraintEnd_toEndOf="@+id/listViewC"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/listViewC"
        android:background="@drawable/quadrato"/>
</android.support.constraint.ConstraintLayout>